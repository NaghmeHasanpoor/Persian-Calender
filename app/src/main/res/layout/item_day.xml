<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/day_item_size"
    android:layout_height="@dimen/day_item_size"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/select_day"
        android:layout_width="@dimen/day_item_select"
        android:layout_height="@dimen/day_item_select"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/select_btn"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/today"
        android:layout_width="@dimen/day_item_select"
        android:layout_height="@dimen/day_item_select"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/today_btn"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/num"
        app:fontFamily="@font/sahel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="22"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@color/white2"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="@dimen/day_item_select_size"
        android:layout_height="@dimen/day_item_select_size"
        android:layout_centerInParent="true">

        <View
            android:id="@+id/event"
            android:layout_width="@dimen/event"
            android:layout_height="@dimen/event"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/event_btn"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>