<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/day_item_size_d"
    android:layout_height="@dimen/day_item_size_d"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/select_day"
        android:layout_width="@dimen/day_item_select_d"
        android:layout_height="@dimen/day_item_select_d"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/select_btn_dialog"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/today"
        android:layout_width="@dimen/day_item_select_d"
        android:layout_height="@dimen/day_item_select_d"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/today_btn"
        android:visibility="gone" />

    <TextView
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="22"
        android:fontFamily="@font/sahel"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="@dimen/day_item_select_size_d"
        android:layout_height="@dimen/day_item_select_size_d"
        android:layout_centerInParent="true">

        <View
            android:id="@+id/event"
            android:layout_width="@dimen/event"
            android:layout_height="@dimen/event"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/event_btn"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>